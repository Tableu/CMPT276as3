<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/dirt_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".WelcomeScreen">

    <ImageView
            android:layout_width="96dp"
            android:layout_height="86dp"
            android:id="@+id/imageView3"
            app:layout_constraintStart_toEndOf="@+id/Author"
            android:layout_marginStart="100dp" app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:layout_marginTop="10dp" android:background="#00FF0000" android:alpha="100"
            android:src="@drawable/bottle"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            android:id="@+id/Author"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:layout_marginTop="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="170dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="170dp"
            android:fontFamily="@font/minecraft_font" android:textColor="#E9E3E3"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Title"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:fontFamily="@font/minecraft_font"
            android:textColor="#E9E3E3" android:textSize="30sp"/>
    <ImageView
            android:layout_width="174dp"
            android:layout_height="153dp"
            android:id="@+id/imageView"
            android:src="@drawable/ehhh"
            app:layout_constraintTop_toBottomOf="@+id/Title"
            android:layout_marginTop="20dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
            android:layout_width="93dp"
            android:layout_height="84dp"
            android:src="@drawable/bottle"
            android:id="@+id/imageView2"
            app:layout_constraintEnd_toStartOf="@+id/Author"
            android:layout_marginEnd="100dp" app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:layout_marginTop="10dp"/>
    <Button
            android:text="@string/skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:background="@drawable/button"
            app:layout_constraintTop_toBottomOf="@+id/Author" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/minecraft_font" android:textColor="#E9E3E3"/>
</androidx.constraintlayout.widget.ConstraintLayout>